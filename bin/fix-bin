#!/bin/bash
source ~/ccktools/.ccktools_aliases

fix_path() {
    if [[ -d $PATH_TO_FIX ]]; then
        sudo chmod -R 777 $PATH_TO_FIX
        sudo chown -R user:user $PATH_TO_FIX
        find $PATH_TO_FIX -type d -exec chown -R user:user -vvv {} \;
        find $PATH_TO_FIX -type d -exec chown -R 755 -vvv {} \;
        find $PATH_TO_FIX -type f -exec chown -R user:user -vvv {} \;
        find $PATH_TO_FIX -type f -exec chown -R 644 -vvv {} \;
        find $PATH_TO_FIX -type f -exec dos2unix -vvv {} \;
        find $PATH_TO_FIX -type f -exec chmod +x -vvv {} \;
        dos2unix $PATH_TO_FIX/.ccktools_*
    fi
}

# PATH_TO_FIX="$HOME/ccktools"
# fix_path

PATH_TO_FIX="/mnt/c/wsl/"
fix_path

# PATH_TO_FIX="/mnt/c/Users/cmartinezv/Documents/GitHub/ccktools"
# fix_path
