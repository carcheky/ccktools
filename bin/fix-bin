#!/bin/bash
source ~/ccktools/.ccktools_aliases

fix_path() {
    if [[ -d "/mnt/c/wsl/" ]]; then
        # ccktools folder
        find /mnt/c/wsl/user/ccktools/ -type f -exec sudo dos2unix {} \;

        # cmd-tools folder
        sudo unix2dos /mnt/c/wsl/user/ccktools/cmd-tools/*

        # home folder
        sudo chown -R user:user /home/user

        # wsl folder
        sudo chown -R user:user /mnt/c/wsl
        sudo chmod -R 777 /mnt/c/wsl
    fi
}

# PATH_TO_FIX="$HOME/ccktools"
# fix_path

PATH_TO_FIX="/mnt/c/wsl/"
fix_path

# PATH_TO_FIX="/mnt/c/Users/cmartinezv/Documents/GitHub/ccktools"
# fix_path
