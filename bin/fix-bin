#!/bin/bash

if [[ -d $HOME/ccktools/bin ]]; then
    find $HOME/ccktools/bin -type f -exec chmod +x {} \;
    find $HOME/ccktools/bin -type f -exec dos2unix {} \;
    dos2unix $HOME/ccktools/.ccktools_*
fi

if [[ -d /c/Users/cmartinezv/Documents/GitHub/ccktools/bin ]]; then
    find /c/Users/cmartinezv/Documents/GitHub/ccktools/bin -type f -exec chmod +x {} \;
    find /c/Users/cmartinezv/Documents/GitHub/ccktools/bin -type f -exec dos2unix {} \;
fi
