#!/bin/bash
source ~/ccktools/.ccktools_aliases

fix_path() {
    if [[ -d $PATH_TO_FIX ]]; then
        find $PATH_TO_FIX -type d -exec sudo chown -R user:user {} \;
        find $PATH_TO_FIX -type d -exec sudo chown -R 755 {} \;
        find $PATH_TO_FIX -type f -exec sudo chown -R user:user {} \;
        find $PATH_TO_FIX -type f -exec sudo chown -R 644 {} \;
        find $PATH_TO_FIX -type f -exec sudo dos2unix {} \;
        find $PATH_TO_FIX -type f -exec sudo chmod +x {} \;
        dos2unix $PATH_TO_FIX/.ccktools_*
    fi
}

PATH_TO_FIX="$HOME/ccktools"
fix_path

PATH_TO_FIX="/mnt/c/wsl/"
fix_path

PATH_TO_FIX="/mnt/c/Users/cmartinezv/Documents/GitHub/ccktools"
fix_path
