#!/bin/bash
source ~/ccktools/.ccktools_aliases

fix_path() {
    if [[ -d $PATH_TO_FIX/bin ]]; then
        find $PATH_TO_FIX/bin -type f -exec chmod +x {} \;
        find $PATH_TO_FIX/bin -type f -exec dos2unix {} \;
        dos2unix $PATH_TO_FIX/.ccktools_*
    fi
}

PATH_TO_FIX="$HOME/ccktools"
fix_path

PATH_TO_FIX="/c/Users/cmartinezv/Documents/GitHub/ccktools"
fix_path
