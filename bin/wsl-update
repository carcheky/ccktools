#!/bin/bash

wsl_stop() {
  echo "
  ==> la consola va a cerrarse
  "
  # read a
  sleep 1
  sudo killall -r '.*'
}

wsl_update() {
  cd ~/ccktools/
  git reset --hard
  git pull origin master
  find ~/ccktools/bin -type f -exec chmod +x {} \;
  find ~/ccktools/bin -type f -exec dos2unix {} \;
}

cd ~/ccktools/
git remote update
UPSTREAM=${1:-'@{u}'}
LOCAL=$(git rev-parse @)
REMOTE=$(git rev-parse "$UPSTREAM")
BASE=$(git merge-base @ "$UPSTREAM")

echo $UPSTREAM
echo $LOCAL
echo $REMOTE
echo $BASE

if [ $LOCAL = $REMOTE ]; then
  echo "==> Up-to-date"
elif [ $LOCAL = $BASE ]; then
  echo "==> Updating..."
  wsl_update
elif [ $REMOTE = $BASE ]; then
  echo "==>Need to push"
else
  echo "==>Diverged"
fi
