#!/bin/bash

wsl_stop() {
  echo "
  ==> la consola va a cerrarse
  "
  # read a
  sleep 1
  sudo killall -r '.*'
}

wsl_update() {
  cd ~/ccktools/
  # git reset --hard
  # git pull origin master
  if [git pull]; then
    echo "==> ccktools updated"
  fi

  find ~/ccktools/bin -type f -exec chmod +x {} \;
  find ~/ccktools/bin -type f -exec dos2unix {} \;
}

wsl_update
