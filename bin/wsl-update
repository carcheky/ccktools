#!/bin/bash

wsl_stop(){
  echo "
  ==> la consola va a cerrarse
  "
  read a
  sudo killall -r '.*'
}

wsl_update(){
    cd '/c/wsl/user/ccktools'
    git pull origin master
    cat ~/ccktools/config/version
    find ~/ccktools/bin -type f -exec chmod +x {} \;
    find ~/ccktools/bin -type f -exec dos2unix {} \;
}

wsl_update