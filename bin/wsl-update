#!/bin/bash
dos2unix /c/Users/cmartinezv/Documents/GitHub/ccktools/bin/* &>/dev/null
wsl_stop() {
  echo "
  ==> la consola va a cerrarse
  "
  # read a
  sleep 1
  sudo killall -r '.*'
}

wsl_update() {
  cd ~/ccktools/
  # git reset --hard
  # git pull origin master
  GITPULL=$(git pull)
  [[ ${GITPULL} == 'Already up to date.' ]] && git status || git pull

  find ~/ccktools/bin -type f -exec chmod +x {} \; &>/dev/null
  find ~/ccktools/bin -type f -exec dos2unix {} \; &>/dev/null
}

wsl_update
