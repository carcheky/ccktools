#!/bin/bash
if [[ -f composer.json ]]; then
	if [[ $@ ]]; then
		for var in "$@"; do
			echo "-> ${var}"
			composer require drupal/${var} --no-update
		done
		composer install
		for var in "$@"; do
			drush en ${var}
		done
		drush cr
		drush cron
		drush locale-check
		drush locale-update
	else
		echo "falta nombre"
	fi
else
	echo "no ecuentro el composer.json"
fi
