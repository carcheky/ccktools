#!/bin/bash

if [[ -f composer.json ]]; then
	if [[ $@ ]]; then
		for var in "$@"; do
			drush pmu ${var}*
		done
		for var in "$@"; do
			echo "-> ${var}"
			composer remove drupal/${var} --no-update
		done
		composer install
		drush cr
		drush cron
		drush locale-check
		drush locale-update
	else
		echo "falta nombre"
	fi
else
	echo "no ecuentro el composer.json"
fi
