#!/bin/bash

########
# INFO #
########


##########
# CONFIG #
##########


#############
# FUNCTIONS #
#############

set_wslconf() {
  if [[ -f /etc/wsl.conf ]]; then
    echo "==> /etc/wsl.conf encontrado"
    return
  fi
  if [[ ! -f /etc/wsl.conf ]]; then
    echo "==> Creando /etc/wsl.conf y saliendo"
    wget https://raw.githubusercontent.com/carcheky/ccktools/master/config/wsl.conf
    sudo mv -f wsl.conf /etc/

    echo "==> La consola se cerrará, ábrala y vuelva a ejecutar la misma operación"
    read a
  fi
  exit 1
}

set_dirs() {
  if [[ -d /c/wsl/ ]]; then
    echo "==> Existe la ruta /c/wsl"
    return
  fi
  if [[ ! -d /c/wsl/ ]]; then
    sudo mkdir '/c/wsl/'
    sudo mkdir '~'
    sudo mkdir '/c/wsl/sites'
    sudo chown -R user:user '/c/wsl/'
    cd '~'
    git clone https://github.com/carcheky/ccktools.git
  fi
}
update_repo() {
  if [[ -d ~/ccktools ]]; then
    cd ~/ccktools/
    if git pull
      then
        echo "ccktools updated"
      else
        echo "ccktools update failed"
    fi
  fi
}

create_links() {
  if [[ -d ~/ccktools ]]; then
      cd ~/ccktools/

    if ! grep -q "bash -c ~/ccktools/bin/wsl-update" ~/.bashrc ; then
      echo "bash -c ~/ccktools/bin/wsl-update" >> ~/.bashrc
    fi

    if ! grep -q "source ~/ccktools/.ccktools" ~/.bashrc ; then
      echo "source ~/ccktools/.ccktools" >> ~/.bashrc
    fi
    
    if ! grep -q "source ~/ccktools/.ccktools_aliases" ~/.bashrc ; then
      echo "source ~/ccktools/.ccktools_aliases" >> ~/.bashrc
    fi

    if [[ -f ~/.zshrc  ]]; then
      if ! grep -q "source ~/ccktools/.ccktools" ~/.zshrc ; then
        echo "source ~/ccktools/.ccktools" >> ~/.zshrc
      fi
      
      if ! grep -q "source ~/ccktools/.ccktools_aliases" ~/.zshrc ; then
        echo "source ~/ccktools/.ccktools_aliases" >> ~/.zshrc
      fi
    fi

    sudo ln -s ~/ccktools/bin  ~
    sudo ln -s ~/ccktools  ~

    sudo apt install dos2unix -y 2>/dev/null
    
    find ~/bin/ -type f -exec chmod +x {} \;
    find ~/bin/ -type f -exec dos2unix {} \;
  fi
}

################
# MAIN PROGRAM #
################

echo "=>actualizando fuentes..." &  sudo apt update 2>dev/null

set_wslconf
set_dirs
create_links
