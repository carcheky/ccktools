#!/bin/bash

source ~/ccktools/.ccktools_aliases
source ~/ccktools/.ccktools_functions

ssh_laucher(){
  SERVICE="ssh-agent"
  if pgrep -x "$SERVICE"
  then
      echo "$SERVICE is running yet"
  else
      echo "starting $SERVICE"
      eval `ssh-agent -s`
      ssh-add -q ~/.ssh/id_rsa_c*
  fi
}

lamp_laucher(){
  SERVICE="apache2"
  if pgrep -x "$SERVICE"
  then
      echo "$SERVICE is running yet"
  else
      echo "starting $SERVICE"
      lamp start
  fi
}

ssh_laucher &>/dev/null
lamp_laucher


if mount | grep /desadrupal > /dev/null; then
    clear
else
    mountdesadrupal
fi


cd /c/wsl/sites